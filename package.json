{
  "name": "what-if-alina-could-nest",
  "version": "0.1.0",
  "description": "rest api on nest.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "compose": "docker-compose up",
    "docs": "apidoc -i src -o docs/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/serve-static": "^1.0.2",
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.2",
    "dotenv": "^8.2.0",
    "mongoose": "^5.13.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.11.7",
    "@types/jest": "^25.1.3",
    "apidoc": "^0.19.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
